@model Projecto.Models.ViewModels.TablaViewModel
@using Projecto.Models.ViewModels
@{
    ViewBag.Title = "Nuevo";
}

<h2>Nueva Queja</h2>
<p>Tenga en cuenta que cualquier queja/denuncia sera borrada si no detalla el problema de manera 
    clara o contiene lenguaje ofensivo u obseno.</p>
@using (Html.BeginForm("Nuevo", "Complain", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.LabelFor(d => d.Nombre)
                @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "red " })
            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Matricula)
                @Html.TextBoxFor(d => d.Matricula, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Matricula, null, new { @class = "red " })
            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Campus)
                @Html.EnumDropDownListFor(d => d.Campus, new { @class = "form-control" })
            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Queja)
                @Html.TextBoxFor(d => d.Queja, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Queja, null, new { @class = "red " })
            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Fecha)<br />
                @Html.EditorFor(d => d.Fecha, "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(d => d.Fecha, null, new { @class = "red" })
            </div>
            <br />
            <div style="text-align:right">
                <input value="Guardar" class="btn btn-primary" type="submit" />
                <a href="~/Complain/Index" class="btn btn-primary">Cancelar</a>
            </div>
        </div>
    </div>
}

