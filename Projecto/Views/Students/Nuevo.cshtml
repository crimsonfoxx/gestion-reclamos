@model Projecto.Models.ViewModels.StudentsViewModel
@{
    ViewBag.Title = "Nuevo";
}

<h2>Nuevo queja sobre un Estudiante</h2>

@using (Html.BeginForm("Nuevo", "Students", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.LabelFor(d => d.Nombre)
                @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "red " })
            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Matricula)
                @Html.TextBoxFor(d => d.Matricula, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Matricula, null, new { @class = "red " })
            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Campus)<br />
                @Html.RadioButtonFor(d => d.Campus, 1)
                <span>Campus 1</span><br />

                @Html.RadioButtonFor(d => d.Campus, 2)
                <span>Campus 2</span><br />

                @Html.ValidationMessageFor(d => d.Campus, null, new { @class = "red " })
                @*@Html.LabelFor(d => d.Campus)
            @Html.TextBoxFor(d => d.Campus, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Campus, null, new { @class = "red " })*@
            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Queja)
                @Html.TextBoxFor(d => d.Queja, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Queja, null, new { @class = "red " })
            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Fecha)<br />
                @Html.EditorFor(d => d.Fecha, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Fecha, null, new { @class = "red" })
            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Estatus)
                @Html.TextBoxFor(d => d.Estatus, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Estatus, null, new { @class = "red " })
            </div>
            <div>
                @if (ViewBag.ErrorMessage != null)
                {
                    <h3 style="color:red">@ViewBag.ErrorMessage</h3>
                }
            </div>
            <br />
            <div style="text-align:right">
                <input value="Guardar" class="btn btn-primary" type="submit" />
                <a href="~/Students/Index" class="btn btn-primary">Cancelar</a>
            </div>
        </div>
    </div>
}

